<div id="variants-el"
  data-default-options="
  {%- for variant_option in product.options_with_values -%}{{variant_option.values[0]}}|{%- endfor -%}"
>
  {%- for variant_option in product.options_with_values -%}
    <div class="variant-container">
      {%- assign variant_index = (forloop.index - 1) -%}
      <div class="">{{variant_option.name}}</div>
      <ul class="product-variants">
        {%- for value in variant_option.values -%}
          <li @click="selectOption('{{variant_index}}', '{{value}}')">{{value}}</li>
        {%- endfor -%}
      </ul>
    </div>
  {%- endfor -%}
  <select name="true-variant" id="true-variant">
    {%- for variant in product.variants -%}
      <option id={{variant.id}} value="{{variant.title}}">{{variant.title}}</option>
    {%- endfor -%}
  </select>
</div>