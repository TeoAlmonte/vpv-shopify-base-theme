<script src="https://cdn.jsdelivr.net/npm/vue"></script>
<script>
document.addEventListener('DOMContentLoaded', () => {
  new Vue({
    el: '#app',
    // components: { App },
    // template: '<App/>',

  data: {
      msg: 'The dogs:',
      checked: true,
      picked: '',
      checkedStatement: '',
      image: '',
      dogBreed: '',
      bredFor: '',
      temperament: '',
      lifeSpan: '',
      breedGroup: ''
  },
  mounted: function() {
    console.log(this.$el);
    this.getInfo()
  },
  methods: {
    resetData: function(json) {
      this.image = json[0].url
      this.dogBreed = json[0].breeds[0].name
      this.bredFor = json[0].breeds[0].bred_for
      this.lifeSpan = json[0].breeds[0].life_span
      this.temperament = json[0].breeds[0].temperament
      this.breedGroup = json[0].breeds[0].breed_group
    },
     getInfo: function() {
      fetch('https://api.thedogapi.com/v1/images/search')
      .then(resp => resp.json())
      // .then(json => console.log(json[0].breeds[0].breed_group))
      .then(json => this.resetData(json))
    },
    checked: function() {
      if (!this.checked) {
        alert('False!')
      }
      console.log('');
    }
  },
  delimiters: ['${', '}']
  })
})

</script>

