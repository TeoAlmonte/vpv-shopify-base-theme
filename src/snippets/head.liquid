<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge">
<meta name="viewport" content="width=device-width,initial-scale=1">
<link rel="canonical" href="{{ canonical_url }}">

{% capture seo_title %}
    {{ page_title }}
    {% if current_tags %}
        {%- assign meta_tags = current_tags | join: ', ' %} &ndash; {{ 'general.meta.tags' | t: tags: meta_tags -}}
    {% endif %}
    {% if current_page != 1 %}
        &ndash; {{ 'general.meta.page' | t: page: current_page }}
    {% endif %}
    {% unless page_title contains shop.name %}
        &ndash; {{ shop.name }}
    {% endunless %}
{% endcapture %}

<title>{{ seo_title }}</title>

{% if page_description %}
<meta name="description" content="{{ page_description | escape }}">
{% endif %}
<meta name="copyright" content="{{ shop.name }} {{ 'now' | date: '%Y' }}">
<meta name="theme-color" content="{{ settings.primary_color }}">

{% include 'scripts' %}

{% include 'social-meta-tags' %}

<!-- Stylesheets -->
{% comment %} include critical styles {% endcomment %}
<link rel="preload" as="style" type="text/css" href="{{ 'theme.css' | asset_url }}" onload="this.onload=null;this.rel='stylesheet'">
<noscript><link type="text/css" rel="stylesheet" href="{{ 'theme.css' | asset_url }}"></noscript>
