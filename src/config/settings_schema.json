[
	{
    "name": "theme_info",
    "theme_name": "V+V Base",
    "theme_version": "1.0",
    "theme_author": "V+V",
    "theme_documentation_url": "https://github.com/verbalplusvisual/vpv-shopify-base-theme",
    "theme_support_url": "https://github.com/verbalplusvisual/vpv-shopify-base-theme"
	},
  {
    "name": "Favicon",
    "settings": [
    	{
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon image",
        "info": "Image should have a 1:1 aspect ratio. ill be scaled down to 32 x 32px"
    	}
    ]
  },
  {
    "name": "Logos",
    "settings": [
    	{
      	"type": "image_picker",
        "label": "Primary Logo",
      	"id": "primary_logo"
      },
      {
      	"type": "image_picker",
        "label": "Secondary Logo",
      	"id": "secondary_logo"
      }
    ]
  },
  {
    "name": "Typography",
    "settings": [
    	{
        "type": "select",
        "id": "base_font_size",
        "label": "Base size",
        "options": [
        	{
            "value": "10px",
        	  "label": "10"
          },
        	{
            "value": "12px",
        	  "label": "12"
          },
          {
            "value": "14px",
            "label": "14"
          },
          {
            "value": "16px",
            "label": "16"
          },
          {
            "value": "18px",
            "label": "18"
          }
        ]
    	},
    	{
        "type": "select",
        "id": "primary_font_family",
        "label": "Primary Font Family",
        "options": [
        	{
            "value": "Roboto",
        	  "label": "Roboto"
          },
        	{
            "value": "Roboto Mono",
        	  "label": "Roboto Mono"
          }
        ]
    	},
    	{
        "type": "select",
        "id": "secondary_font_family",
        "label": "Secondary Font Family",
        "options": [
        	{
            "value": "Roboto",
        	  "label": "Roboto"
          },
        	{
            "value": "Roboto Mono",
        	  "label": "Roboto Mono"
          }
        ]
    	}
    ]
  },
  {
    "name": "Colors",
    "settings": [
    	{
        "type": "color",
        "id": "primary_color",
        "label": "Primary Color"
    	},
    	{
        "type": "color",
        "id": "secondary_color",
        "label": "Secondary Color"
    	}
    ]
  },
  {
    "name": "Promo Bar",
    "settings": [
      {
        "type": "checkbox",
        "id": "promo_bar",
        "label": "Show Promo Bar?",
        "default": false
      },
      {
        "type": "textarea",
        "id": "promo_bar_text",
        "label": "Promo Bar Text"
      },
      {
        "type": "text",
        "id": "promo_bar_code",
        "label": "Promo Bar Code"
      },
      {
        "type": "color",
        "id": "promo_bar_color",
        "label": "Promo Bar Color",
        "default": "#FF00FF"
      },
      {
        "type": "color",
        "id": "promo_bar_text_color",
        "label": "Promo Bar Text Color",
        "default": "#FFFFFF"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "header",
        "content": "Social sharing options"
      },
      {
        "type": "checkbox",
        "id": "social_sharing_blog",
        "label": "Enable sharing for blog articles",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_facebook",
        "label": "Share on Facebook",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_twitter",
        "label": "Tweet on Twitter",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "share_pinterest",
        "label": "Pin on Pinterest",
        "default": true
      },
      {
        "type": "header",
        "content": "Sharing links"
      },
      {
        "type": "text",
        "id": "social_twitter_link",
        "label": "Twitter link"
      },
      {
        "type": "text",
        "id": "social_facebook_link",
        "label": "Facebook link"
      },
      {
        "type": "text",
        "id": "social_pinterest_link",
        "label": "Pinterest link"
      },
      {
        "type": "text",
        "id": "social_instagram_link",
        "label": "Instagram link"
      },
      {
        "type": "text",
        "id": "social_snapchat_link",
        "label": "Snapchat link"
      },
      {
        "type": "text",
        "id": "social_tumblr_link",
        "label": "Tumblr link"
      },
      {
        "type": "text",
        "id": "social_youtube_link",
        "label": "Youtube link"
      },
      {
        "type": "text",
        "id": "social_vimeo_link",
        "label": "Vimeo link"
      }
    ]
  }
]
